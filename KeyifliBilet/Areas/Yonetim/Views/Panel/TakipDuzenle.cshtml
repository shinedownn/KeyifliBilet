@model KeyifliBilet.Areas.Yonetim.Models.IndexViewModel
@foreach (var item in Model.takipKodlari)
{
    <form id="myForm" action="@Url.Action("TakipDuzenle", "Panel",new { id = @item.TakipId })" method="post" accept-charset="utf-8" enctype="multipart/form-data">
        <div id="listOfCustomers" style="height: 400px; overflow: auto;">


            <div class="form-group">
                <label>SERVİS ADI</label>
                <input class="form-control" type="text" name="servis" id="servis" value="@item.Servis" required="required">
            </div>
            <div class="form-group">
                <label>(Header da gözükmesini istiyorsanız işaretleyin.</label>
                @if (item.Lokasyon == true)
                {
                    <input class="form-control" type="checkbox" checked="checked" name="lokasyon" id="lokasyon">
                }
                else
                {
                    <input class="form-control" type="checkbox" name="lokasyon" id="lokasyon">
                }

            </div>
            <div class="form-group">
                <label>script</label>
                <textarea name="script" id="script">
@item.Script
            </textarea>
            </div>


            <div class="box-footer">
                <button class="btn btn-xs btn-danger" id="btnSubmit" href="@Url.Action("TakipDuzenle", "Panel",new { id = @item.TakipId })">
                    <span> DÜZENLE</span>
                </button>
            </div>


        </div>


    </form>
}