@model KeyifliBilet.Areas.Yonetim.Models.IndexViewModel

<head>

    <script type="text/javascript">
        $('#tumunu_sec').click(function (event) {
            if (this.checked) {
                // Iterate each checkbox
                $(':checkbox').each(function () {
                    this.checked = true;
                });
            }
            else {
                $(':checkbox').each(function () {
                    this.checked = false;
                });
            }
        });
    </script>
</head>
@foreach (var item in Model.kullanicilar)
{
    <form id="myForm" action="@Url.Action("KullanıcıYetkilendirme", "Panel",new { id = item.KullaniciId })" method="post" accept-charset="utf-8" enctype="multipart/form-data">
        <div id="listOfCustomers" style="height: 400px; overflow: auto;">


            <div class="form-group">
                <label>AD SOYAD</label>
                <input class="form-control" type="text" name="ad" id="ad" value="@item.Ad - @item.Soyad" readonly>
            </div>
            <div class="form-group">
                <label>Yetkiler</label>
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>Tüm Yetkiler</th>
                            <th>Varolan Yetkiler</th>

                        </tr>
                    </thead>
                    <tbody>


                        <tr class="odd gradeX">

                            <td>
                                <ul>
                                    <li>
                                        <input type="checkbox" id="tumunu_sec"> Tümünü Seç / Seçimi Kaldır
                                    </li>

                                    @foreach (var item2 in Model.yetkiler)
                                    {
                                        <li>
                                            <input type="checkbox" id="tumunu_sec" name="yetkiler" value="@item2.YetkiAdi"
                                                   class="checklistcategories" />
                                            <label>@item2.YetkiAdi</label>
                                        </li>
                                    }
                                </ul>
                            </td>
                            <td>
                                <ul>
                                    @foreach (var item2 in Model.yetki)
                                    {
                                        <li>
                                            <input type="checkbox" checked="checked" name="yetkiKaldir" value="@item2.MetodAdi" />
                                            <label>@item2.MetodAdi</label>
                                        </li>
                                    }
                                </ul>
                            </td>

                        </tr>




                    </tbody>
                </table>
            </div>

            <div class="box-footer">
                <button class="btn btn-xs btn-danger" id="btnSubmit" href="@Url.Action("KullanıcıYetkilendirme", "Panel",new { id = item.KullaniciId })">
                    <span> DÜZENLE</span>
                </button>
            </div>


        </div>


    </form>
}


