@model KeyifliBilet.Areas.Yonetim.Models.IndexViewModel


@foreach (var item in Model.uyeler)
{
    <form id="myForm" action="@Url.Action("UyeGuncelle", "Panel", new  { uyeId = @item.UyeId} )" method="post" accept-charset="utf-8" enctype="multipart/form-data">
        <div id="listOfCustomers" style="height: 400px; overflow: auto;">

            <div class="form-group">
                <label>Ad Soyad</label>
                <input class="form-control" name="adsoyad" value="@item.AdSoyad" required="required">
            </div>
            <div class="form-group">
                <label>Telefon</label>
                <input class="form-control" name="telefon" value="@item.GSM" required="required">
            </div>
            <div class="form-group">
                <label>Mail</label>
                <input class="form-control" name="mail" value="@item.Mail" required="required">
            </div>

            <div class="box-footer">
                <button class="btn btn-xs btn-danger" id="btnSubmit" href="@Url.Action("UyeGuncelle", "Panel", new  { uyeId = @item.UyeId} )">
                    <span> DÜZENLE</span>
                </button>
            </div>


        </div>


    </form>
}
   





