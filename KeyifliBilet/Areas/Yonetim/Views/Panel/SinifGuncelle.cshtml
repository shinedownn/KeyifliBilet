@model KeyifliBilet.Areas.Yonetim.Models.IndexViewModel
@foreach (var item in Model.sinif)
{
    <form id="myForm" action="@Url.Action("SinifDuzenle", "Panel",new { id = item.SinifId })" method="post" accept-charset="utf-8" enctype="multipart/form-data">
        <div id="listOfCustomers" style="height: 400px; overflow: auto;">


            <div class="form-group">
                <label>SINIF ADI</label>
                <input class="form-control" type="text" name="sinif" id="sinif" value="@item.SinifAdi" required="required">
            </div>
            <div class="form-group">
                <label>SERVİS BEDELİ</label>
                <input class="form-control" type="text" name="servisBedeli" id="servisBedeli" value="@item.ServisBedeli" required="required">
            </div>



            <div class="box-footer">
                <button class="btn btn-xs btn-danger" id="btnSubmit" href="@Url.Action("SinifDuzenle", "Panel",new { id = item.SinifId })">
                    <span> DÜZENLE</span>
                </button>
            </div>


        </div>


    </form>
}
