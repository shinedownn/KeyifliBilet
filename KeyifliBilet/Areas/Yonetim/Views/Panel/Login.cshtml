


@{
    ViewBag.Title = "Login";
    Layout = null;

}
<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>RST Admin Paneli</title>

    <!-- Core CSS - Include with every page -->
    <link href="http://dernek.scriptvadisi.com/admin-assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="http://dernek.scriptvadisi.com/adin-assets/font-awesome/css/font-awesome.css" rel="stylesheet">

    <!-- SB Admin CSS - Include with every page -->
    <link href="http://dernek.scriptvadisi.com/admin-assets/css/sb-admin.css" rel="stylesheet">

</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            <strong>Yönetim Panel Girişi</strong>
                        </h3>
                    </div>
                    <div class="panel-body">
                        <form action="#" method="post" accept-charset="utf-8">
                            <fieldset>
                                <div class="form-group">
                                    <input type="text" name="username" value="" class="form-control" id="inputUsername" placeholder="Kullanıcı Adınız" />
                                </div>
                                <div class="form-group">
                                    <input type="password" name="password" value="" class="form-control" id="inputPassword" placeholder="Şifreniz" />
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" name="remember" id="remember" value="true" /> Beni Hatırla
                                    </label>
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                <button class="btn btn-lg btn-success btn-block" href="@Url.Action("Login","Panel")">Giriş</button>
                            </fieldset>
                        </form>
                        <span class="pull-right"><a href="#"> Siteye Dön</a></span>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Core Scripts - Include with every page -->
    <script src="http://dernek.scriptvadisi.com/admin-assets/js/jquery-1.10.2.js"></script>
    <script src="http://dernek.scriptvadisi.com/admin-assets/js/bootstrap.min.js"></script>
    <script src="http://dernek.scriptvadisi.com/admin-assets/js/plugins/metisMenu/jquery.metisMenu.js"></script>

    <!-- SB Admin Scripts - Include with every page -->
    <script src="http://dernek.scriptvadisi.com/admin-assets/js/sb-admin.js"></script>

</body>

</html>