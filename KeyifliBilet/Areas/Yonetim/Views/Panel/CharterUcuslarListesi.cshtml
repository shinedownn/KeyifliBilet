@model KeyifliBilet.Iati.Response.GetSpecialOffersResponse
@{
    ViewBag.Title = "CharterUcuslarListesi";
    Layout = "~/Areas/Yonetim/Views/Shared/MasterPage.cshtml";
}

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs-3.3.7/jq-2.2.4/jszip-3.1.3/pdfmake-0.1.27/dt-1.10.15/b-1.3.1/b-html5-1.3.1/b-print-1.3.1/r-2.1.1/rg-1.0.0/datatables.min.css" />

<script type="text/javascript" src="https://cdn.datatables.net/v/bs-3.3.7/jq-2.2.4/jszip-3.1.3/pdfmake-0.1.27/dt-1.10.15/b-1.3.1/b-html5-1.3.1/b-print-1.3.1/r-2.1.1/rg-1.0.0/datatables.min.js"></script>

<section id="main-content">
    <section class="wrapper">
        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Charter Uçuşlar</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>

            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">

                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="table-responsive">

                                <table id="myTable" class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>Hava Alanı Kodu</th>
                                            <th>Şehir</th>
                                            <th>Flight No</th>
                                            <th>Durum</th>
                                            <th>Nerden</th>
                                            <th>Nereye</th>
                                            <th>Ne Zaman</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.result != null)
                                        {
                                            foreach (var item in Model.result.charterList)
                                            {
                                               
                                           
                                        <tr class="odd gradeX" id="row_@item.firstLegFlightNo">
                                            <td>@item.arrivalAirportCode</td>
                                            <td>@item.arrivalAirportName</td> 
                                            <td>@item.departureAirportCode</td>
                                            <td>@item.departureAirportName</td>
                                            <td>@item.departureTime</td>
                                            <td>@item.arrivalAirportName</td>
                                            <td>@item.departureDate</td>
                                        </tr>
                                             

                                            }
                                        }
                                        else
                                        {
                                            <div class="alert alert-info">Charter Bulunmamaktadır.</div>
                                        }
                                    </tbody>
                                </table>

                                <script>
                                    $('#myTable').DataTable();
                                </script>
                                <div class="pagination"></div>
                            </div>
                            <!-- /.table-responsive -->

                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
    </section>
</section>

