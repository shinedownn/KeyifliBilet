@model KeyifliBilet.Areas.Yonetim.Models.IndexViewModel

@foreach (var item in Model.mailKategori)
{
    <form id="myForm" action="@Url.Action("MailKategoriGuncelle", "Panel",new { id = item.MailKategoriId })" method="post" accept-charset="utf-8" enctype="multipart/form-data">
        <div id="listOfCustomers" style="height: 400px; overflow: auto;">


            <div class="form-group">
                <label>AÇIKLAMA</label>
                <input class="form-control" type="text" name="aciklama" id="aciklama" value="@item.Aciklama" required="required">
            </div>
            <div class="form-group">
                <label>KOD</label>
                <input class="form-control" type="text" name="kod" id="kod" value="@item.Kod" required="required">
            </div>

            <div class="box-footer">
                <button class="btn btn-xs btn-danger" id="btnSubmit" href="@Url.Action("MailKategoriGuncelle", "Panel",new { id = item.MailKategoriId })">
                    <span> EKLE</span>
                </button>
            </div>


        </div>


    </form>
}
