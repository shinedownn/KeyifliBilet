@model KeyifliBilet.Areas.Yonetim.Models.IndexViewModel

@foreach (var item in Model.sosyalMedya)
{
    <form id="myForm" action="@Url.Action("SosyalMedyaDuzenle", "Panel",new { id = item.Id })" method="post" accept-charset="utf-8" enctype="multipart/form-data">
        <div id="listOfCustomers" style="height: 400px; overflow: auto;">


            <div class="form-group">
                <label>PLATFORM</label>
                <input class="form-control" type="text" name="platform" id="platform" value="@item.Platform" required="required">
            </div>
            <div class="form-group">
                <label>ADRES</label>
                <input class="form-control" type="text" name="url" id="url" value="@item.Url" required="required">
            </div>



            <div class="box-footer">
                <button class="btn btn-xs btn-danger" id="btnSubmit" href="@Url.Action("SosyalMedyaDuzenle", "Panel",new { id = item.Id })">
                    <span> DÜZENLE</span>
                </button>
            </div>


        </div>


    </form>
}
